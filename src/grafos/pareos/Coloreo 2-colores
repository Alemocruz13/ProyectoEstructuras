from collections import deque

def es_bipartito(grafo):
    """
    Determina si un grafo es bipartito usando coloreo de 2 colores.
    grafo: dict con la lista de adyacencia {nodo: [vecinos]}
    Retorna True si es bipartito, False si no lo es.
    """
    color = {}  # Diccionario que almacena el color de cada nodo: 0 o 1

    for nodo in grafo:
        if nodo not in color:
            # Empezamos coloreando este nodo con 0
            color[nodo] = 0
            cola = deque([nodo])

            while cola:
                actual = cola.popleft()
                for vecino in grafo[actual]:
                    if vecino not in color:
                        # Asignamos el color opuesto al vecino
                        color[vecino] = 1 - color[actual]
                        cola.append(vecino)
                    elif color[vecino] == color[actual]:
                        # Si un vecino tiene el mismo color, no es bipartito
                        return False
    return True

# Ejemplo de uso:
grafo = {
    0: [1, 3],
    1: [0, 2],
    2: [1, 3],
    3: [0, 2]
}

print(es_bipartito(grafo))  # Deber√≠a imprimir True
